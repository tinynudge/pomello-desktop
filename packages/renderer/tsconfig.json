{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@domain": ["../domain"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": ["**/*.ts", "**/*.tsx", "../../types/**/*.d.ts", "../preload/contracts.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
