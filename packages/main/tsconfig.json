{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "esnext",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "@domain": ["../domain"]
    }
  },
  "include": ["**/*.ts", "../../types/**/*.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
